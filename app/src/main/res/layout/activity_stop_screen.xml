<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    tools:context=".StopScreen">

    <TextView
        android:id="@+id/stop_view"
        android:layout_width="99dp"
        android:layout_height="47dp"
        android:text="STOP"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.137" />

    <Button
        android:id="@+id/butt_resume"
        android:layout_width="205dp"
        android:layout_height="74dp"
        android:layout_marginTop="84dp"
        android:background="#FFFFFF"
        android:text="RESUME"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stop_view"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/butt_restart"
        android:layout_width="206dp"
        android:layout_height="76dp"
        android:layout_marginTop="24dp"
        android:background="#FFFFFF"
        android:text="RESTART"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butt_resume"
        app:layout_constraintVertical_bias="0.012" />

    <Button
        android:id="@+id/butt_menu"
        android:layout_width="207dp"
        android:layout_height="76dp"
        android:layout_marginBottom="228dp"
        android:background="#FFFFFF"
        android:text="MENU"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butt_restart"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>