<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    tools:context=".SelectActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_above="@+id/spinnerSelectPlayer"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="115dp"
        android:layout_marginRight="115dp"
        android:layout_marginBottom="7dp"
        android:text="SELECT"
        android:textColor="#FFFFFF"
        android:textSize="45sp" />

    <Spinner
        android:id="@+id/spinnerSelectPlayer"
        android:layout_width="305dp"
        android:layout_height="52dp"
        android:layout_above="@+id/button_easy"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginBottom="51dp"
        android:background="#EFF1F3"
        android:entries="@array/Spinner_items"
        android:text="select..." />

    <Button
        android:id="@+id/button_easy"
        android:layout_width="273dp"
        android:layout_height="75dp"
        android:layout_above="@+id/button_medium"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:layout_marginBottom="26dp"
        android:background="#FFFFFF"
        android:text="EASY"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_medium"
        android:layout_width="273dp"
        android:layout_height="75dp"
        android:layout_above="@+id/button_hard"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="67dp"
        android:layout_marginLeft="67dp"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="74dp"
        android:layout_marginBottom="17dp"
        android:background="#FFFFFF"
        android:text="MEDIUM"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_hard"
        android:layout_width="270dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:layout_marginBottom="183dp"
        android:background="#FFFFFF"
        android:text="HARD"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="138dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_backward"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:contentDescription="@string/choose_it"
            app:srcCompat="@drawable/triangle" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_weight="1"
            android:text="TextView"
            tools:visibility="invisible" />

        <ImageButton
            android:id="@+id/button_forward"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:contentDescription="@string/choose_it"
            app:srcCompat="@drawable/forward" />
    </LinearLayout>

</RelativeLayout>